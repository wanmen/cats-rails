<%= form_for @tag do |f| %>

  <div class="col-sm-10">
    <div class="form-group">
      <label class="col-sm-3" for="tag_name">标签名*</label>
      <%= f.text_field :name, :class => 'form-control', :placeholder => '请输入标签名(必填)', :required => true %>
    </div>
    <div class="form-group">
      <label class="col-sm-3" for="tag_parent">添加为</label>
      <%= f.select :parent, @parentTags.map{ |t| [t.name, t.id] }, selected: @selected %>
      的子标签(一级标签请留空)
    </div>
    <div class="text-center">
      <button class="col-sm-offset-5 btn btn-primary" type="submit">完成</button>
      <button class="btn btn-default wm-md-left" type="reset">重新修改</button>
    </div>
  </div>
<% end %>
