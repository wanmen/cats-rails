<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <a href="/uploader?return_url=<%=request.original_url%>">上传封面</a>
  </p>
  <div class="field">
    <% if params[:url] %>
      <img src="<%= upyun_url+ params[:url] %>!medium">
       <%= f.text_field :cover, :value=> upyun_url+params[:url],:type=>:hidden%>
    <% else %>
       或者<%= f.text_field :cover,:placeholder=>'添加图片URL'%>
    <% end %>
  </div>
  <%= f.text_field :user_id, :type=>:hidden, :value=>current_user[:id]%>
  <div class="field">
    标题*<br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    作者*<br>
    <%= f.text_field :author %>
  </div>
  <div class="field">
    豆瓣ID<br>
    <%= f.number_field :dbid %>
  </div>
  <div class="field">
    简介<br>
    <%= f.text_area :summary %>
  </div>
  <div class="field">
    ISBN号<br>
    <%= f.text_field :isbn %>
  </div>
  <div class="field">
    出版社<br>
    <%= f.text_field :publisher %>
  </div>
  <div class="field">
    链接<br>
    <%= f.text_field :url %>
  </div>
  <div class="actions">
    <%= f.submit "添加" %>
  </div>
<% end %>
