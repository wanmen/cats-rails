<% content_for :head do %>
   <title>图书 | 万门大学</title>
<% end %>
<main class="container" role="main">
  <article class="col-sm-8">
    <section class="wm-gallery">
      <h3 class="page-header">
        <span class="glyphicon glyphicon-star"></span> 精选推荐
        <a class="wm-quick-link" href="">查看全部</a>
      </h3>
      <div class="row">
          <% @bestBooklist.each do |booklist| %>
          <figure class="col-sm-4">
            <a href="/lists/<%=booklist.id %>.html" class="thumbnail">
               <img src="<%=booklist.links[0].linkable.cover %>!medium" alt="">
            </a>
            <figcaption>
              <a href="/lists/<%=booklist.id %>.html"><%=booklist.title%></a>
            </figcaption>
          </figure>
        <% end %>
      </div>
      <div class="row">
        <% @best.each do |book| %>
        <figure class="col-sm-4">
          <a class="thumbnail" href="/books/<%=book.id %>.html">
            <img src="<%=book.cover %>!medium" alt="<%=book.title %>" title="<%=book.title %>"/>
          </a>
          <figcaption>
            <a href="/books/<%=book.id %>.html" title="<%=book.title %>"><%=book.title %></a>
          </figcaption>
        </figure>
        <% end %>
      </div>
    </section>

    <section class="wm-gallery">
      <h3 class="page-header">
        <span class="glyphicon glyphicon-calendar"></span> 最新图书
        <a class="wm-quick-link" href="">查看全部</a>
      </h3>
      <div class="row">
         <% @newest.each do |book| %>
          <figure class="col-sm-4">
            <a class="thumbnail" href="/books/<%=book.id %>.html">
              <img src="<%=book.cover %>!medium" alt="" title="<%=book.title %>"/>
            </a>
            <figcaption>
              <a href="/books/<%=book.id %>.html" title="<%=book.title %>"><%=book.title %></a>
            </figcaption>
          </figure>
        <% end %>
      </div>
    </section>
  </article>

  <aside class="col-sm-4">
    <section>
      <h3 class="page-header">
        <span class="glyphicon glyphicon-tasks"></span> 热门书单
        <a class="wm-quick-link" href="">查看全部</a>
      </h3>
      <ol class="wm-list-popular">
        <% @popularBooklist.each do |list| %>
         <li><a href="/lists/<%=list.id %>.html"><%=list.title %></a></li>
        <% end %>
      </ol>
    </section>

    <section>
      <h3 class="page-header">
        <span class="glyphicon glyphicon-th-list"></span> 热门图书
        <a class="wm-quick-link" href="">查看全部</a>
      </h3>
      <ol class="wm-list-popular">
        <% @popular.each do |book| %>
          <li><a href="/books/<%=book.id %>.html"> <%=book.title %></a></li>
        <% end %>
      </ol>
    </section>

    <section>
      <h3 class="page-header">
        <span class="glyphicon glyphicon-stats"></span> 热门标签
        <a class="wm-quick-link" href="">查看全部</a>
      </h3>
      <div class="wm-tags-popular">
        【<a class="wm-tag-category" href="/tags/1">物理</a>】
        <a href="">牛顿力学</a> |
        <a href="">统计物理</a> |
        <a href="">量子场论</a>
      </div>
      <div class="wm-tags-popular">
        【<a class="wm-tag-category" href="">计算机</a>】
        <a href="">编程</a> |
        <a href="">机器学习</a> |
        <a href="">网页设计</a>
      </div>
      <div class="wm-tags-popular">
        【<a class="wm-tag-category" href="">数学</a>】
        <a href="">微积分</a> |
        <a href="">线性代数</a> |
        <a href="">数学物理方程</a>
      </div>
      <div class="wm-tags-popular">
        【<a class="wm-tag-category" href="">外国语</a>】
        <a href="">英语</a> |
        <a href="">法语</a> |
        <a href="">希伯来语</a>
      </div>
      <div class="wm-tags-popular">
        【<a class="wm-tag-category" href="">文学</a>】
        <a href="">中国古典文学</a> |
        <a href="">文学史</a> |
        <a href="">希腊文学</a>
      </div>
    </section>
  </aside>
</main>

<script src="/assets/wm-dom.js"></script>