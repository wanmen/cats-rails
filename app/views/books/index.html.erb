<% content_for :head do %>
   <title>图书 | 万门大学</title>
<% end %>
<main class="container" role="main">
  <article class="col-sm-8">
    <section class="wm-gallery">
      <h3 class="page-header">
        <span class="glyphicon glyphicon-star"></span> 精选推荐
        <a class="wm-quick-link" href="">查看全部</a>
      </h3>
      <div class="row">
        <% count=0 %>
              <% @popularBooklist.each do |booklist| %>
        <% count = count+1 %>
        <% if count == 4 %>
             </div><div class="row">
        <% end %>
          <figure class="col-sm-4">
            <a href="/lists/<%=booklist.id %>" class="thumbnail">
               <img src="<%=booklist.links[0].linkable.cover %>!big" alt="">
            </a>
            <figcaption>
              <a href="/lists/<%=booklist.id %>"><%=booklist.title%></a>
            </figcaption>
          </figure>
        <% end %>
      </div>
      <div class="row">
        <figure class="col-sm-4">
          <a class="thumbnail" href="books/1.html">
            <img src="http://img.wanmen.org/2013/09/04feec86b4294f78ba6d00c4085f88fc.jpg" alt="" title="枪炮、病菌与钢铁"/>
          </a>
          <figcaption>
            <a href="books/1.html" title="枪炮、病菌与钢铁">枪炮、病菌与钢铁</a>
          </figcaption>
        </figure>
        <figure class="col-sm-4">
          <a class="thumbnail" href="">
            <img src="http://img.wanmen.org/2013/09/adeb1e84045dbd4bcf398a71c887fa75.jpg" alt="" title="玻利维亚日记"/>
          </a>
          <figcaption>
            <a href="" title="玻利维亚日记">玻利维亚日记</a>
          </figcaption>
        </figure>
        <figure class="col-sm-4">
          <a class="thumbnail" href="">
            <img src="http://img.wanmen.org/2013/09/7120dc81dc165a9aeccfe8397df205be.jpg" alt="" title="我的前半生"/>
          </a>
          <figcaption>
            <a href="" title="我的前半生">我的前半生</a>
          </figcaption>
        </figure>
      </div>
    </section>

    <section class="wm-gallery">
      <h3 class="page-header">
        <span class="glyphicon glyphicon-calendar"></span> 最新图书
        <a class="wm-quick-link" href="">查看全部</a>
      </h3>
      <div class="row">
         <% @newest.each do |book| %>
          <figure class="col-sm-4">
            <a class="thumbnail" href="/books/<%=book.id %>">
              <img src="<%=book.cover %>!big" alt="" title="<%=book.title %>"/>
            </a>
            <figcaption>
              <a href="/books/<%=book.id %>" title="<%=book.title %>"><%=book.title %></a>
            </figcaption>
          </figure>
        <% end %>
      </div>
    </section>
  </article>

  <aside class="col-sm-4">
    <section>
      <h3 class="page-header">
        <span class="glyphicon glyphicon-tasks"></span> 热门书单
        <a class="wm-quick-link" href="">查看全部</a>
      </h3>
      <ol class="wm-list-popular">
        <% @popularBooklist.each do |list| %>
         <li><a href="/lists/<%=list.id %>"><%=list.title %></a></li>
        <% end %>
      </ol>
    </section>

    <section>
      <h3 class="page-header">
        <span class="glyphicon glyphicon-th-list"></span> 热门图书
        <a class="wm-quick-link" href="">查看全部</a>
      </h3>
      <ol class="wm-list-popular">
        <% @popular.each do |book| %>
          <li><a href="/books/<%=book.id %>"> <%=book.title %></a></li>
        <% end %>
      </ol>
    </section>

    <section>
      <h3 class="page-header">
