<div class="container">
    <div class="page-header">
      <h1>万门经验贴</h1>
    </div>
    <div class="row">
      <div class="col-xs-8">
      <% @articles.each do |article| %>
        <div class="row">
          <div class="col-xs-3">
            作者<%= article.author %><br/>
            日期<%= article.updated_at.strftime('%b %d, %Y %H:%M') %><br/>
            <%= article.likes.length %>个喜欢<br/>
            <%= article.comments.length %>个评论
          </div>
          <div class="col-xs-9">
            <h3><a href="/articles/<%= article.id %>"><%= article.title %></a></h3>
            <p>
              <%= article.summary %>
            </p>
          </div>
        </div>
      <% end %>
      </div>
      <div class="col-xs-3">
      </div>
    </div>
</div>
<%= link_to 'New Article', new_article_path %>
