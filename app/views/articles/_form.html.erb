<%= form_for @article, html: {class: "container form-horizontal wm-form", role: "form"} do |f| %>
  <div class="col-sm-10">
      <% if @article.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

          <ul>
          <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.label "标题*", :class=>"col-sm-3", :for=>"article_title" %>
        <%= f.text_field :title, :class=>"form-control", :placeholder=>"请输入经验贴标题(必填)", :title=>"请输入经验贴标题(必填)", :required=>true %>
      </div>
      <div class="form-group">
        <%= f.label "作者*", :class=>"col-sm-3", :for=>"article_author" %>
        <%= f.text_field :author, :class=>"form-control", :placeholder=>"请输入经验贴作者(必填)", :title=>"请输入经验贴作者(必填)", :required=>true %>
      </div>
      <div class="form-group">
        <%= f.label "链接", :class=>"col-sm-3", :for=>"article_url" %>
        <%= f.text_field :url, :type=>"url", :class=>"form-control", :placeholder=>"请输入经验贴链接URL", :title=>"请输入经验贴链接URL" %>
      </div>
      <div class="form-group">
        <%= f.label "摘要", :class=>"col-sm-3", :for=>"article_summary" %>
        <div class="col-sm-9 wm-reset">
        <%= f.text_area :summary, :rows=>"5", :class=>"form-control", :placeholder=>"请输入经验贴摘要(100字以内)", :title=>"请输入经验贴摘要(100字以内)" %>
      	</div>
      </div>
      <div class="form-group">
      	<%= f.label "内容*", :class=>"col-sm-3", :for=>"article_content" %>
          <div class="col-sm-9 wm-reset">
              <a class="btn btn-primary btn-sm pull-right" href="/editor">如何编辑？</a>
              <br/>
              <div class="wmd-panel">
                  <div id="wmd-button-bar"></div>
                  <%= f.text_area :content,:id=>"wmd-input", :class=>"wmd-input", :placeholder=>"请在此编辑经验贴正文", :title=>"请在此编辑经验贴正文", :required=>true %>
              </div>
              <div class="wmd-panel wmd-preview" id="wmd-preview"></div>
          </div>
      </div>
      <div class="form-group">
        <button class="btn btn-primary pull-right" type="submit">完成</button>
      </div>
  </div>
<% end %>
