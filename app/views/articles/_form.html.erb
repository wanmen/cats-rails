<%= form_for @article, html: {class: "container form-horizontal wm-form", role: "form"} do |f| %>
  <div class="col-sm-10">
      <% if @article.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

          <ul>
          <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <%= f.text_field :user_id, :type=>:hidden, :value=>current_user[:id]%>
      <div class="form-group">
        <%= f.label "书名*", :class=>"col-sm-3", :for=>"article_title" %>
        <%= f.text_field :title, :class=>"form-control", :placeholder=>"请输入标题(必填)", :title=>"请输入标题(必填)", :required=>true %>
      </div>
      <div class="form-group">
        <%= f.label "简介", :class=>"col-sm-3", :for=>"article_summary" %>
        <%= f.text_field :summary, :class=>"form-control", :placeholder=>"请输入简介", :title=>"请输入简介", :required=>true %>
      </div>
      <div class="form-group">
        <%= f.label "链接", :class=>"col-sm-3", :for=>"article_url" %>
        <%= f.text_field :url, :class=>"form-control", :placeholder=>"请输入链接", :title=>"请输入链接" %>
      </div>
      <div class="form-group">
        <%= f.label "作者", :class=>"col-sm-3", :for=>"article_author" %>
        <%= f.text_field :author, :class=>"form-control", :placeholder=>"请输入作者" %>
      </div>
      <div class="form-group">
          <label class="col-sm-3" for="book_content">内容*</label>
          <div class="col-sm-9 wm-reset">
              <a class="btn btn-primary btn-sm pull-right" href="../help/editor.html">如何编辑？</a>
              <br/>
              <div class="wmd-panel">
                  <div id="wmd-button-bar"></div>
                  <textarea class="wmd-input" id="wmd-input" title="请在此编辑经验贴正文" required></textarea>
              </div>
              <div class="wmd-panel wmd-preview" id="wmd-preview"></div>
          </div>
      </div>
      <div class="form-group">
        <button class="btn btn-primary pull-right" type="submit">完成</button>
      </div>
  </div>
<% end %>
