<% content_for :head do %>
    <title> 万门大学X | 万门大学</title>
<% end %>

<main class="container" role="main">

<h1>万门大学X</h1>

<h3>最新动态</h3>
<table>
  <thead>
    <tr>
      <th>标题</th>
      <th>简介</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @latest.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.summary %></td>
        <span class="wm-quick-link">
        <td><%= link_to 'Show', xclub_xevent_path(event[:xclub_id], event) %></td>
        <% if can? :update, event %>
          <td><%= link_to 'Edit', edit_xclub_xevent_path(event[:xclub_id], event) %></td>
        <% end %>
        <% if can? :destroy, event %>
          <td><%= link_to 'Destroy', xclub_xevent_path(event[:xclub_id], event), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        </span>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>

<h3>成员列表</h3>
<% @xclubs.each do |xclub| %>
    <a href="/xclubs/<%= xclub.id %>" title=""<%= xclub.name %>"><%= xclub.name %></a> <br>
<% end %>

<br>

<hr>

<% if can? :create, @xclub %>
    <%= link_to 'New Xclub', new_xclub_path %>
<% end %>

</main>

<% content_for :bottom_script do %>
    <%= render :partial => 'layouts/raty' %>
    <%= render :partial => 'layouts/rails' %>
<% end %>


