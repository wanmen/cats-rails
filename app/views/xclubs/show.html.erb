<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @xclub.name %>
</p>

<p>
  <strong>Started:</strong>
  <%= @xclub.started %>
</p>

<p>
  <strong>Summary:</strong>
  <%= @xclub.summary %>
</p>

<p>
  <strong>Thumbnail:</strong>
  <%= @xclub.thumbnail %>
</p>

<h3>最新动态</h3>
<tbody>
<% @latest.each do |event| %>
    <tr>
      <td><%= event.title %></td>
      <td><%= event.summary %></td>
      <td><%= link_to 'Show', xclub_xevent_path(event[:xclub_id], event) %></td>
      <% if can? :update, event %>
        <td><%= link_to 'Edit', edit_xclub_xevent_path(event[:xclub_id], event) %></td>
      <% end %>
      <% if can? :destroy, event %>
        <td><%= link_to 'Destroy', xclub_xevent_path(event[:xclub_id], event), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr><br>
<% end %>
</tbody>

<% if can? :update, @xclub %>
<%= link_to '新建活动', new_xclub_xevent_path(@xclub) %> <br>
<% end %>

<%= link_to 'Edit', edit_xclub_path(@xclub) %> |
