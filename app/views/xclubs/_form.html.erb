<%= form_for @xclub, :html =>{:class =>"container form-horizontal wm-form", :role =>"form", :multipart => true} do |f| %>
<div class="col-sm-10">
  <div class="form-group">
    <label class="col-sm-3" for="xclub_thumbnail">头像*</label>
    <%= image_tag(@xclub.thumbnail.url("medium")) if @xclub.thumbnail? %>
    <%= f.file_field :thumbnail %>
  </div>
  <div class="form-group">
    <label class="col-sm-3" for="xclub_name">社团名称*</label>
    <%= f.text_field :name, class: :'form-control', placeholder: :'请输入社团名称(必填)', required: :true %>
  </div>
  <div class="form-group">
    <label class="col-sm-3" for="xclub_started">建立时间*</label>
    <%= f.date_select :started, class: :'form-control' %>
  </div>
  <div class="form-group">
    <label class="col-sm-3" for="xclub_summary">社团简介*</label>
    <%= f.text_field :summary, class: :'col-sm-offset-1 form-control', placeholder: :'请输入社团简介(必填)', required: :true %>
  </div>

  <div class="text-center">
    <button class="col-sm-offset-5 btn btn-primary" type="submit">完成</button>
  </div>
</div>
<% end %>
