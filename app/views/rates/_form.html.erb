<%= form_for [@rateable, @rate] do |f| %>
  <% if @rate.errors.any? %>
    <div class="error_messages">
      <h2>Please correct the following errors.</h2>
      <ul>
      <% @rate.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.number_field :star,:id=>'rate',:type=>'hidden'%>
  </div>
  <% if current_user&& current_user[:role]>=2 %>
    <div class="actions">
      <%= f.submit '打分',:id=>'rate_button' %>
    </div>
  <% end %>
<% end %>
