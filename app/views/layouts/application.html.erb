<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" href="/assets/favicon.ico">

    <title>万门大学</title>

    <!-- Bootstrap core CSS -->
    <link href="/assets/bootstrap.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/assets/bottle.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="js/html5shiv.js"></script>
      <script src="js/respond.min.js"></script>
    <![endif]-->
    <style>
    #videoPanel{
      z-index: 100;
      width:100%;
      margin-top: 80px;
      padding:0 100px;
      position: absolute;
      top:0px;
      left:0px;
    }
    #videoFrame{
      width: 100%;
      height: 600px;
      text-align: center;
      margin:0 auto;
    }
    </style>
  </head>

  <body>

    <div class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">万门大学</a>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li class="dropdown active">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">知识库<b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><a href="/books.html">图书</a></li>
                <li><a href="/videos.html">视频</a></li>
                <li><a href="/articles.html">经验贴</a></li>
              </ul>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li>
              <form method="get" action="/search" class="navbar-form pull-left">
                <input type="text" name="title" placeholder="图书，视频，经验贴" class="span2">
                <button type="submit" class="btn">搜索</button>
              </form>
            </li>
            <% if user_signed_in? %>
                <% if (current_user[:sign_in_count]<=1) %>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown"><img src="<%=current_user[:thumbnail]%>" width="40px"></a>
                  <ul class="dropdown-menu">
                    <li><%= link_to "修改",edit_user_registration_path %> </li>
                    <li> <%= link_to "登出", destroy_user_session_path, :method => :delete %>
                    </li>
                  </ul>
                </li>
                <% else %>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown"><img src="<%=current_user[:thumbnail]%>" width="40px"></a>
                  <ul class="dropdown-menu">
                    <li><%= link_to "修改",edit_user_registration_path %> </li>
                    <li> <%= link_to "登出", destroy_user_session_path, :method => :delete %>
                    </li>
                  </ul>
                </li>
                <% end %>
            <% else %>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">登陆</a>
                  <ul class="dropdown-menu">
                    <li>
                      <%= link_to image_tag("/assets/weibo_login.png", :width=>"24px"), user_omniauth_authorize_path(:weibo) %>
                      <%= link_to image_tag("/assets/renren_login.png", :width=>"24px"), user_omniauth_authorize_path(:renren) %>
                      <%= link_to image_tag("/assets/douban_login.png", :width=>"24px"), user_omniauth_authorize_path(:douban) %>
                    </li>
                    <li> <a href="/users/sign_in">万门登陆</a></li>
                  </ul>
                </li>
            <% end %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
    <% if flash[:alert] %>
    <p class="alert alert-warning">
          <%= flash[:alert] %>
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </p>
    <% end %>
    <% if flash[:notice] %>
    <p class="alert alert-info">
          <%= flash[:notice] %>
            <button type="button" class="close" data-dismiss="alert">&times;</button>
    </p>
    <% end %>
    <%= yield %>
    <hr>
    <footer>
      <p class="pull-right"><a href="#">向上</a></p>
      <p>&copy; 万门公益 &middot;</p>
    </footer>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="/assets/jquery.js"></script>
    <script src="/assets/jquery.raty.js"></script>
    <script src="/assets/bootstrap.min.js"></script>
    <script src="/assets/holder.js"></script>
    <script>
    $('#rate_button').hide();
    $('#star').raty({
      score: function() {
        return $(this).attr('data-score');
      },
      click: function(score, evt) {
        $('#rate')[0].value = score;
        $('#rate_button').show();
      }
    });
    function addTag(){
      $('#tagForm').show();
    }
    function hideTag(){
      $('#tagForm').hide();
    }
    function addList(){
      $('#listForm').show();
    }
    function hideList(){
      $('#listForm').hide();
    }
    function showVideo(video){
      if(video.indexOf('youku')!=-1){
        var vid=video.slice(video.indexOf("id_")+3,-5);
        video = "http://player.youku.com/embed/"+vid;
      }
      window.open(video);
     // $('#videoPanel').show();
     // $('#videoFrame').attr('src', video);
    }
    function hideVideo(){
      $('#videoPanel').hide();
      $('#videoFrame').attr('src','');
    }
    </script>

  </body>
</html>

