<h3>添加新评论</h3>
<%= form_for [@commentable, @comment] do |f| %>
  <% if @comment.errors.any? %>
    <div class="error_messages">
      <h2>Please correct the following errors.</h2>
      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% if current_user %>
  <img src="<%= current_user[:thumbnail]%>" width="50px">
  <p> 
    <%= f.text_area :content %>
  </p>
  <div class="actions">
    <%= f.submit '评论' %>
  </div>
  <% else %>
  <div class="actions">
    <%= f.submit '登陆以评论' %>
  </div>
  <% end %>
<% end %>
