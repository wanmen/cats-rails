<% if can? :edit, @taglinkable %>
  <a onclick="addTag()">添加新标签</a>
  <div id="tagForm" style="display:none;">
    <%= form_for [@taglinkable, @taglink], :html=>{:class=>"wm-inline-block",:role=>"form"} do |f| %>
      <% if @taglink.errors.any? %>
        <div class="error_messages">
          <h2>Please correct the following errors.</h2>
          <ul>
          <% @taglink.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <p>
        <%= f.select :tag_id, @tags.map{ |c| [c.name, c.id] } %>
      </p>
      <div class="actions">
        <%= f.submit '添加', :class=>"btn btn-default" %>
      </div>
    <% end %>
    <a onclick="hideTag()">隐藏</a> |
    <a href="/tags/new">新建标签</a>
  </div>
<% end %>
